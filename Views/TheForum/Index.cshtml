@{
    ViewBag.Title = "List";
}

<h2>Comment Entry</h2>
<p>
    <a href="/TheForum/Create">>Add a comment</a>
</p>
@foreach (var entry in ViewBag.Entries)
{
    <section class="contact">
        <header>
            <h3>@entry.Message</h3>
        </header>
        <p>
            Posted by @entry.Name on @entry.DateAdded.ToLongDateString()
        </p>
    </section>
}

